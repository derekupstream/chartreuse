// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialActions"]
}

model User {
  id          String   @id
  name        String?
  email       String?  @unique
  title       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  org         Org?     @relation(fields: [orgId], references: [id])
  orgId       String?
  account     Account? @relation(fields: [accountId], references: [id])
  accountId   String?
  phone       String?
  role        Role     @default(ORG_ADMIN)
  invitesSent Invite[]
}

model Org {
  id        String    @id @default(uuid())
  name      String
  metadata  Json?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  users     User[]
  accounts  Account[]
  projects  Project[]
}

model Account {
  id                  String    @id @default(uuid())
  name                String
  metadata            Json?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  org                 Org?      @relation(fields: [orgId], references: [id])
  orgId               String?
  users               User[]
  accountContactEmail String
  invites             Invite[]
  projects            Project[]
}

model Invite {
  id           String   @id @default(uuid())
  email        String
  account      Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId    String
  accepted     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  sentBy       User     @relation(fields: [sentByUserId], references: [id], onDelete: Cascade)
  sentByUserId String
}

model Project {
  id                String             @id @default(uuid())
  name              String
  metadata          Json?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  org               Org?               @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId             String?
  account           Account?           @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId         String?
  singleUseProducts SingleUseProduct[]
}

model SingleUseProduct {
  id                String   @id @default(uuid())
  caseCost          Int
  casesPurchased    Int
  frequency         String
  productId         String
  newCaseCost       Int
  newCasesPurchased Int
  project           Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId         String?
}

enum Role {
  ORG_ADMIN
  ACCOUNT_ADMIN
}
