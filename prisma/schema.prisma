generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id
  name        String?
  email       String   @unique
  title       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  phone       String?
  role        Role     @default(ORG_ADMIN)
  orgId       String   @db.Uuid
  accountId   String?  @db.Uuid
  invitesSent Invite[]
  account     Account? @relation(fields: [accountId], references: [id])
  org         Org      @relation(fields: [orgId], references: [id], onDelete: Cascade)
}

model UserEvent {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  userId    String
  type      String
}

model Org {
  name                 String
  metadata             Json?
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt
  id                   String       @id @default(uuid()) @db.Uuid
  isUpstream           Boolean      @default(false)
  stripeCustomerId     String?
  stripeSubscriptionId String?
  currency             String       @default("USD")
  useMetricSystem      Boolean      @default(false)
  useShrinkageRate     Boolean      @default(false)
  orgInviteCode        String?      @unique
  accounts             Account[]
  invites              Invite[]
  projects             Project[]
  projectTags          ProjectTag[]
  users                User[]
}

model Account {
  name                String
  metadata            Json?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  accountContactEmail String
  id                  String    @id @default(uuid()) @db.Uuid
  orgId               String    @db.Uuid
  USState             String    @default("California")
  org                 Org       @relation(fields: [orgId], references: [id], onDelete: Cascade)
  invites             Invite[]
  projects            Project[]
  users               User[]
}

model Invite {
  email        String
  accepted     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  sentByUserId String
  id           String   @id @default(uuid()) @db.Uuid
  accountId    String?  @db.Uuid
  orgId        String   @db.Uuid
  account      Account? @relation(fields: [accountId], references: [id], onDelete: Cascade)
  org          Org      @relation(fields: [orgId], references: [id], onDelete: Cascade)
  sentBy       User     @relation(fields: [sentByUserId], references: [id], onDelete: Cascade)
}

model Project {
  name                         String
  metadata                     Json?
  createdAt                    DateTime                  @default(now())
  updatedAt                    DateTime                  @updatedAt
  id                           String                    @id @default(uuid()) @db.Uuid
  orgId                        String                    @db.Uuid
  accountId                    String                    @db.Uuid
  USState                      String?
  utilityRates                 Json?
  currency                     String?                   @default("USD")
  budget                       Int?
  singleUseReductionPercentage Int?
  isTemplate                   Boolean                   @default(false)
  templateDescription          String?
  templateId                   String?                   @db.Uuid
  category                     ProjectCategory           @default(default)
  eventGuestCount              Int                       @default(0)
  projectionsDescription       String?
  projectionsTitle             String?
  publicSlug                   String?                   @unique
  recommendations              Json?
  showRecommendations          Boolean                   @default(true)
  location                     Json?
  dateType                     String?
  endDate                      DateTime?                 @db.Date
  startDate                    DateTime?                 @db.Date
  dishwashers                  Dishwasher[]
  dishwashersSimple            DishwasherSimple[]
  eventFoodwareItems           EventFoodwareLineItem[]
  laborCosts                   LaborCost[]
  otherExpenses                OtherExpense[]
  account                      Account                   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  org                          Org                       @relation(fields: [orgId], references: [id], onDelete: Cascade)
  template                     Project?                  @relation("templates", fields: [templateId], references: [id])
  projects                     Project[]                 @relation("templates")
  tags                         ProjectTagRelation[]
  reusableItems                ReusableLineItem[]
  singleUseItems               SingleUseLineItem[]
  truckTransportationCosts     TruckTransportationCost[]
  wasteHaulingCosts            WasteHaulingCost[]
}

model EventFoodwareLineItem {
  id                       String   @id @default(uuid()) @db.Uuid
  createdAt                DateTime @default(now())
  updatedAt                DateTime @default(now()) @updatedAt
  singleUseProductId       String
  reusableProductId        String
  reusableItemCount        Int      @default(0)
  reusableReturnPercentage Float    @default(100)
  projectId                String   @db.Uuid
  waterUsageGallons        Float?
  reusableReturnCount      Int      @default(0)
  project                  Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model SingleUseLineItem {
  caseCost          Float
  casesPurchased    Int
  frequency         String
  productId         String
  newCaseCost       Float
  newCasesPurchased Int
  unitsPerCase      Int
  id                String                    @id @default(uuid()) @db.Uuid
  projectId         String                    @db.Uuid
  createdAt         DateTime                  @default(now())
  updatedAt         DateTime                  @default(now()) @updatedAt
  project           Project                   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  records           SingleUseLineItemRecord[]
}

model SingleUseLineItemRecord {
  id                  String            @id @default(uuid()) @db.Uuid
  createdAt           DateTime          @default(now())
  entryDate           DateTime
  caseCost            Float
  casesPurchased      Int
  unitsPerCase        Int
  singleUseLineItemId String            @db.Uuid
  singleUseLineItem   SingleUseLineItem @relation(fields: [singleUseLineItemId], references: [id], onDelete: Cascade)

  @@unique([singleUseLineItemId, entryDate])
}

model ReusableLineItem {
  annualRepurchasePercentage Float
  caseCost                   Float
  casesPurchased             Int
  categoryId                 String?
  productName                String?
  id                         String   @id @default(uuid()) @db.Uuid
  projectId                  String   @db.Uuid
  unitsPerCase               Int      @default(0)
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime @default(now()) @updatedAt
  productId                  String?
  project                    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model OtherExpense {
  id          String   @id @default(uuid()) @db.Uuid
  categoryId  String
  cost        Float
  description String
  frequency   String
  projectId   String   @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model LaborCost {
  id          String   @id @default(uuid()) @db.Uuid
  categoryId  String
  cost        Float
  description String
  frequency   String
  projectId   String   @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model WasteHaulingCost {
  id             String   @id @default(uuid()) @db.Uuid
  monthlyCost    Float
  wasteStream    String
  serviceType    String
  projectId      String   @db.Uuid
  newMonthlyCost Float
  description    String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now()) @updatedAt
  project        Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model TruckTransportationCost {
  id              String   @id @default(uuid()) @db.Uuid
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
  distanceInMiles Float
  projectId       String   @db.Uuid
  project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Dishwasher {
  id                          String   @id @default(uuid()) @db.Uuid
  boosterWaterHeaterFuelType  String?
  buildingWaterHeaterFuelType String
  energyStarCertified         Boolean
  operatingDays               Int
  temperature                 String
  type                        String
  projectId                   String   @db.Uuid
  newOperatingDays            Int
  newRacksPerDay              Int
  racksPerDay                 Int
  createdAt                   DateTime @default(now())
  updatedAt                   DateTime @default(now()) @updatedAt
  project                     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model DishwasherSimple {
  id            String   @id @default(uuid()) @db.Uuid
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt
  electricUsage Float
  waterUsage    Float
  fuelType      String
  projectId     String   @db.Uuid
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ProjectTag {
  id       String               @id @default(uuid()) @db.Uuid
  label    String
  index    Int
  orgId    String               @db.Uuid
  org      Org                  @relation(fields: [orgId], references: [id], onDelete: Cascade)
  projects ProjectTagRelation[]
}

model ProjectTagRelation {
  projectId String     @db.Uuid
  tagId     String     @db.Uuid
  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tag       ProjectTag @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([projectId, tagId])
}

enum ProjectCategory {
  default
  event
  eugene
}

enum Role {
  ORG_ADMIN
  ACCOUNT_ADMIN
}
