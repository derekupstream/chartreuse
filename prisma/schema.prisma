// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id
  name        String?
  email       String   @unique
  title       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  org         Org      @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId       String   @db.Uuid
  account     Account? @relation(fields: [accountId], references: [id])
  accountId   String?  @db.Uuid
  phone       String?
  role        Role     @default(ORG_ADMIN)
  invitesSent Invite[]
}

model UserEvent {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  type      String
  userId    String
}

model Org {
  id                   String    @id @default(uuid()) @db.Uuid
  name                 String
  metadata             Json?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  isUpstream           Boolean   @default(false)
  currency             String    @default("USD")
  useMetricSystem      Boolean   @default(false)
  useShrinkageRate     Boolean   @default(false) // If true, org uses shrinkage rate instead of return rate
  users                User[]
  accounts             Account[]
  projects             Project[]
  invites              Invite[]
  stripeCustomerId     String?
  stripeSubscriptionId String?
}

model Account {
  id                  String    @id @default(uuid()) @db.Uuid
  name                String
  metadata            Json?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  accountContactEmail String
  USState             String    @default("California")
  org                 Org       @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId               String    @db.Uuid
  users               User[]
  invites             Invite[]
  projects            Project[]
}

model Invite {
  id           String   @id @default(uuid()) @db.Uuid
  email        String
  account      Account? @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId    String?  @db.Uuid
  orgId        String   @db.Uuid
  org          Org      @relation(fields: [orgId], references: [id], onDelete: Cascade)
  accepted     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  sentBy       User     @relation(fields: [sentByUserId], references: [id], onDelete: Cascade)
  sentByUserId String
}

enum ProjectCategory {
  default
  event
  eugene
}

model Project {
  id                           String                    @id @default(uuid()) @db.Uuid
  name                         String
  metadata                     Json?
  createdAt                    DateTime                  @default(now())
  updatedAt                    DateTime                  @updatedAt
  org                          Org                       @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId                        String                    @db.Uuid
  account                      Account                   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId                    String                    @db.Uuid
  eventFoodwareItems           EventFoodwareLineItem[]
  eventGuestCount              Int                       @default(0)
  singleUseItems               SingleUseLineItem[]
  reusableItems                ReusableLineItem[]
  otherExpenses                OtherExpense[]
  laborCosts                   LaborCost[]
  truckTransportationCosts     TruckTransportationCost[]
  wasteHaulingCosts            WasteHaulingCost[]
  dishwashers                  Dishwasher[]
  dishwashersSimple            DishwasherSimple[]
  USState                      String?
  utilityRates                 Json?
  currency                     String?                   @default("USD")
  singleUseReductionPercentage Int?
  budget                       Int?
  templateId                   String?                   @db.Uuid
  template                     Project?                  @relation("templates", fields: [templateId], references: [id], onDelete: SetNull)
  projects                     Project[]                 @relation("templates")
  location                     Json?

  // template properties
  isTemplate          Boolean @default(false)
  templateDescription String?

  category               ProjectCategory @default(default)
  projectionsDescription String?
  projectionsTitle       String?
  publicSlug             String?         @unique
  recommendations        Json?
  showRecommendations    Boolean         @default(true)
}

// a new model for "Foodware" tab, where we pair a single use and reusable product together
// Initially this pairing will be defined by a hard-coded config
model EventFoodwareLineItem {
  id                       String   @id @default(uuid()) @db.Uuid
  createdAt                DateTime @default(now())
  updatedAt                DateTime @default(now()) @updatedAt
  singleUseProductId       String
  reusableProductId        String
  reusableItemCount        Int      @default(0)
  reusableReturnPercentage Float    @default(100) // out of 100
  reusableReturnCount      Int      @default(0) // prefer this over reusableReturnPercentage
  waterUsageGallons        Float? // Optional field for water station usage in gallons
  projectId                String   @db.Uuid
  project                  Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model SingleUseLineItem {
  createdAt         DateTime                  @default(now())
  updatedAt         DateTime                  @default(now()) @updatedAt
  id                String                    @id @default(uuid()) @db.Uuid
  caseCost          Float
  casesPurchased    Int
  frequency         String
  productId         String
  newCaseCost       Float
  newCasesPurchased Int
  unitsPerCase      Int
  project           Project                   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId         String                    @db.Uuid
  records           SingleUseLineItemRecord[]
}

model SingleUseLineItemRecord {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  entryDate DateTime

  caseCost       Float
  casesPurchased Int
  unitsPerCase   Int

  singleUseLineItem   SingleUseLineItem @relation(fields: [singleUseLineItemId], references: [id], onDelete: Cascade)
  singleUseLineItemId String            @db.Uuid

  @@unique([singleUseLineItemId, entryDate])
}

model ReusableLineItem {
  id                         String   @id @default(uuid()) @db.Uuid
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime @default(now()) @updatedAt
  annualRepurchasePercentage Float
  caseCost                   Float
  casesPurchased             Int
  unitsPerCase               Int      @default(0)
  categoryId                 String?
  productId                  String?
  productName                String?
  projectId                  String   @db.Uuid
  project                    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model OtherExpense {
  id          String   @id @default(uuid()) @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  categoryId  String
  cost        Float
  description String
  frequency   String
  projectId   String   @db.Uuid
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model LaborCost {
  id          String   @id @default(uuid()) @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  categoryId  String
  cost        Float
  description String
  frequency   String
  projectId   String   @db.Uuid
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model WasteHaulingCost {
  id             String   @id @default(uuid()) @db.Uuid
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now()) @updatedAt
  monthlyCost    Float
  newMonthlyCost Float
  wasteStream    String
  serviceType    String
  description    String
  projectId      String   @db.Uuid
  project        Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

// used for event category
model TruckTransportationCost {
  id              String   @id @default(uuid()) @db.Uuid
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
  distanceInMiles Float
  projectId       String   @db.Uuid
  project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Dishwasher {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  racksPerDay                 Int
  newRacksPerDay              Int
  boosterWaterHeaterFuelType  String?
  buildingWaterHeaterFuelType String
  energyStarCertified         Boolean
  operatingDays               Int
  newOperatingDays            Int
  temperature                 String
  type                        String
  projectId                   String  @db.Uuid
  project                     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model DishwasherSimple {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  electricUsage Float
  waterUsage    Float
  fuelType      String
  projectId     String  @db.Uuid
  project       Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

enum Role {
  ORG_ADMIN
  ACCOUNT_ADMIN
}
